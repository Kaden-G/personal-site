---
const { title = "Kaden Godinez", description = "Small, playful software with a modern edge." } = Astro.props;
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="min-h-screen bg-[#F4EFE7] text-[#1F2933]">
    <div class="min-h-screen flex flex-col">
      <Nav />
      <main class="flex-1 px-4 md:px-8 lg:px-12 max-w-5xl mx-auto py-10">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
